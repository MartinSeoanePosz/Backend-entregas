<div style="display: flex;">
  <form id="add" style="flex: 1;">
    <h3>Agregar producto:</h3>
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" />
    </div>
    <div>
      <label for="description">Description:</label>
      <textarea id="description"></textarea>
    </div>
    <div>
      <label for="price">Price:</label>
      <input type="text" id="price" />
    </div>
    <div>
      <label for="thumbnail">Thumbnail:</label>
      <input type="text" id="thumbnail" />
    </div>
    <div>
      <label for="code">Code:</label>
      <input type="text" id="code" />
    </div>
    <div>
      <label for="category">Category:</label>
      <input type="text" id="category" />
    </div>
    <div>
      <label for="stock">Stock:</label>
      <input type="text" id="stock" />
    </div>
    <button id="addProductBtn">Add Product</button>
  </form>

    <form id="delete" style="flex: 1; margin-left: 20px;">
      <h3>Eliminar producto:</h3>
      <label for="productId">Product ID:</label>
      <input type="text" id="productId" />
      <button id="deleteProductBtn">Delete Product</button>
    </form>
</div>

<div class="productList">
  {{#each products}}
    <div class="productCard">
      <div class="cardProduct__image">
        {{#if this.thumbnail}}
          <img src="{{this.thumbnail}}" alt="{{this.title}}" />
        {{else}}
          <img src="https://img.freepik.com/free-vector/illustration-gallery-icon_53876-27002.jpg" alt="No Thumbnail" />
        {{/if}}
      </div>
      <div class="cardProduct__info">

        <h3>{{this.title}}</h3>
        <p>{{this.description}}</p>
        <p>{{this.price}}</p>
        <p>{{this.stock}}</p>
        <p>{{this.code}}</p>
        <p>{{this.id}}</p>
      </div>
    </div>
  {{/each}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="../js/realtime.js"></script>