<div class="productList">
  {{#each products}}
    <div class="productCard">
      <div class="cardProduct__image">
        {{#if this.thumbnail}}
          <img src="{{this.thumbnail}}" alt="{{this.title}}" />
        {{else}}
          <img src="https://img.freepik.com/free-vector/illustration-gallery-icon_53876-27002.jpg" alt="No Thumbnail" />
        {{/if}}
      </div>
      <div class="cardProduct__info">

        <h3>{{this.title}}</h3>
        <p>{{this.description}}</p>
        <p>{{this.price}}</p>
        <p>{{this.stock}}</p>
        <p>{{this.code}}</p>
        <p>{{this.id}}</p>
      </div>
    </div>
  {{/each}}
</div>